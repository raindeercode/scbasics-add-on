    <script>
      function changeTheme() {
        let body = document.querySelector("body");

        if (body.classList.contains("dark-theme")) {
          body.classList.remove("dark-theme");
        } else {
          body.classList.add("dark-theme");
        }
      }

      let themeDarkButton = document.querySelector(".dark-theme-button");
      themeDarkButton.addEventListener("click", changeTheme);

      function travelWithButton() {
        let name = prompt("What is your name?");

        if (name.length <= 0) {
          alert("Oh my gosh! We kinda need a name to address you by! üíî");
        } else {
          let email = prompt(
            "Thank you, " + name + "! And what is your email?"
          );
        }

        if (name.length > 0) {
          alert(
            "Amazing! üßòüèΩ‚Äç‚ôÄÔ∏è We appreciate you reaching out. You should receive a confirmation receipt in your email shortly. Happy travels! üíü"
          );
        } else {
          alert("Maybe refresh and try again, you got this.");
        }
      }

      let buttonTravel = document.querySelector(".travel-button");
      buttonTravel.addEventListener("click", travelWithButton);
    </script>
